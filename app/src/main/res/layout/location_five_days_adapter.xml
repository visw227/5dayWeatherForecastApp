<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"

    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_140sdp"
        android:orientation="vertical"
        android:background="@color/colorPrimary"
        android:id="@+id/ln_whole_1"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:text="TODAY, March 10"
            android:gravity="center"
            android:id="@+id/tv_header_today"
            android:textSize="@dimen/_15sdp"
            android:textColor="#FFFFFF"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_70sdp"
            android:orientation="horizontal"
            android:weightSum="2"
            >
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="@dimen/_70sdp"
                    android:background="@drawable/weather"
                    android:id="@+id/iv_header_weather"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="@dimen/_90sdp"
                    android:layout_height="@dimen/_70sdp"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:text="17"
                    android:id="@+id/tv_header_max_temperature"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/_30sdp"
                    />


            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:weightSum="2"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                >
                <TextView
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:text="moderate"
                    android:gravity="center"
                    android:textColor="#FFFFFF"
                    android:layout_marginLeft="@dimen/_30sdp"
                    android:id="@+id/tv_header_condition"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                >
                <TextView
                    android:layout_width="@dimen/_130sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:gravity="center"
                    android:text="17"
                    android:visibility="gone"
                    android:id="@+id/tv_header_min_temperature"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/_20sdp"
                    />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>







    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_70sdp"
        android:orientation="horizontal"
        android:gravity="center"
        android:id="@+id/ln_whole_2"
        android:weightSum="3"
        android:background="@drawable/list_backgroundthir"
        android:layout_marginTop="@dimen/_2sdp"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="0.8"
            android:gravity="center"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:background="@drawable/weather"
                android:id="@+id/iv_weather"
                android:layout_gravity="center_vertical"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.2"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/ln_row_second"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_dayy"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:gravity="center"
                    android:paddingLeft="@dimen/_6sdp"
                    android:text="Tomorrow"
                    android:textColor="#000000"
                    android:textSize="@dimen/_15sdp" />

                <TextView
                    android:id="@+id/tv_conditionn"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:gravity="center"
                    android:paddingLeft="@dimen/_4sdp"
                    android:text="clear"
                    android:textColor="#000000"
                    android:textSize="@dimen/_15sdp" />

            </LinearLayout>



        </LinearLayout>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"

            android:text="21"
            android:textSize="@dimen/_15sdp"
            android:paddingLeft="@dimen/_6sdp"
            android:gravity="center"
            android:id="@+id/tv_temp_max"
            android:textColor="#000000"
            />



    </LinearLayout>


</LinearLayout>
